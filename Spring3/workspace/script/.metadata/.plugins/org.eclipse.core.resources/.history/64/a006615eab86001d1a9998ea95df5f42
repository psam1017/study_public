-- UUID : 경우의 수가 매우 많아 중복이 거의 없다. 실무에서도 중복이 없는 것처럼 사용하고 있다. 이를 파일 이름 앞에 연결하여 중복이 없게 만든다.

CREATE TABLE SPR_FILE
(
	UUID		VARCHAR2(1000) CONSTRAINT PK_FILE PRIMARY KEY,
	UPLOAD_PATH	VARCHAR2(1000),
	FILE_NAME	VARCHAR2(1000),
	FILE_TYPE	CHAR(1),
	BNO			NUMBER(10),
	CONSTRAINT FK_FILE FOREIGN KEY(BNO)
		REFERENCES SPR_BOARD(BNO)
);

SELECT * FROM SPR_FILE;